{
  "name": "classguru-payment-service",
  "version": "1.0.0",
  "description": "Isolated payment service for ClassGuru with Stripe integration",
  "type": "module",
  "main": "src/server.ts",
  "scripts": {
    "setup": "bash scripts/setup.sh",
    "dev": "bash start-server.sh",
    "start": "bash start-server.sh",
    "start:direct": "npx tsx src/server.ts",
    "validate": "node scripts/validate-env.js",
    "check-port": "bash scripts/check-port.sh",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "demo": "bash scripts/run-demo.sh",
    "generate-jwt": "node scripts/generate-test-jwt.js",
    "test:stripe": "node scripts/test-with-stripe.js",
    "kill-server": "lsof -ti :8790 | xargs kill -9 2>/dev/null || echo 'No server running on port 8790'"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/static": "^6.12.0",
    "better-sqlite3": "^9.4.3",
    "chalk": "^5.6.2",
    "dotenv": "^16.4.5",
    "fastify": "^4.26.2",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^5.1.6",
    "stripe": "^14.21.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.30",
    "tsx": "^4.7.1",
    "typescript": "^5.4.3"
  }
}
