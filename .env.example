
PORT=8790
NODE_ENV=development

DB_PATH=./data/payment.db

# Get these from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxx

# Get this from: https://dashboard.stripe.com/test/webhooks
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Product Price IDs (from Stripe Dashboard > Products)
STRIPE_MONTHLY_PRICE_ID=price_your_monthly_price_id_here
STRIPE_TRIAL_PRICE_ID=price_your_trial_price_id_here

# -----------------
# JWT Config
# -----------------
# Generate a secure random string for production
# Example: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# -----------------
# Plan Config
# -----------------
MONTHLY_PLAN_PRO_AMOUNT=58.90
MONTHLY_PLAN_AMOUNT=9.90
TRIAL_PLAN_AMOUNT=1.00
MONTHLY_PLAN_CURRENCY=sgd

# -----------------
# Frontend URLs
# -----------------
# These are used for Stripe checkout redirects
FRONTEND_SUCCESS_URL=http://localhost:8790/payment/success
FRONTEND_CANCEL_URL=http://localhost:8790/payment/cancel

# -----------------
# Optional: Logging
# -----------------
LOG_LEVEL=info
